# Alsatbedava.com - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ===== Database Configuration =====
# MySQL/TiDB connection string
# Format: mysql://username:password@host:port/database_name
DATABASE_URL=mysql://user:password@localhost:3306/alsatbedava

# ===== Authentication (Manus OAuth) =====
# JWT secret for session signing (generate a random string)
JWT_SECRET=your-super-secret-jwt-key-change-this

# Manus OAuth server URL (provided by Manus)
OAUTH_SERVER_URL=https://oauth.manus.im

# Manus OAuth portal URL (provided by Manus)
VITE_OAUTH_PORTAL_URL=https://portal.manus.im

# Your Manus application ID (get from Manus dashboard)
VITE_APP_ID=your-manus-app-id

# ===== S3 Storage Configuration =====
# S3-compatible storage endpoint (provided by Manus or your S3 provider)
S3_ENDPOINT=https://your-s3-endpoint.com
S3_BUCKET=your-bucket-name
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key
S3_REGION=auto

# ===== Application Configuration =====
# Environment: development or production
NODE_ENV=development

# Server port (default: 3000)
PORT=3000

# Application title (displayed in browser)
VITE_APP_TITLE=Alsatbedava.com

# Application logo path
VITE_APP_LOGO=/logo.png

# ===== Owner Configuration =====
# Your Manus OpenID (for admin access and notifications)
# Get this from your Manus profile
OWNER_OPEN_ID=your-manus-open-id

# ===== Email Service (Optional - Choose One) =====
# Uncomment and configure the email service you want to use

# SendGrid (Recommended)
# SENDGRID_API_KEY=your-sendgrid-api-key
# SENDGRID_FROM_EMAIL=notifications@alsatbedava.com

# AWS SES
# AWS_SES_REGION=eu-west-1
# AWS_SES_ACCESS_KEY=your-aws-access-key
# AWS_SES_SECRET_KEY=your-aws-secret-key
# AWS_SES_FROM_EMAIL=notifications@alsatbedava.com

# Resend
# RESEND_API_KEY=your-resend-api-key
# RESEND_FROM_EMAIL=notifications@alsatbedava.com

# ===== Analytics & Monitoring (Optional) =====
# Google Analytics tracking ID
# VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry DSN for error monitoring
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ===== Feature Flags (Optional) =====
# Enable/disable automated email notifications
# ENABLE_EMAIL_NOTIFICATIONS=true

# Enable/disable scheduled cron jobs
# ENABLE_SCHEDULER=true
